<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLesson1"
            android:layout_marginHorizontal="8dp"
            android:text="Lessons 1"
            style="@style/styleButtons"
            />

        <Button
            android:id="@+id/btnHomework1"
            android:text="Homework 1"
            style="@style/styleButtons"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLesson2"
            android:layout_marginHorizontal="8dp"
            android:text="Lessons 2"
            style="@style/styleButtons"
            />

        <Button
            android:id="@+id/btnHomework2"
            android:text="Homework 2"
            style="@style/styleButtons"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLesson3"
            android:layout_marginHorizontal="8dp"
            android:text="Lessons 3"
            style="@style/styleButtons"
            />

        <Button
            android:id="@+id/btnHomework3"
            android:text="Homework 3"
            style="@style/styleButtons"
            />

    </LinearLayout>


</LinearLayout>